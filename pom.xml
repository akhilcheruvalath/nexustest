    <modelVersion>4.0.0</modelVersion>

    <groupId>com.intuit.ctg.ttwin.win10.poc</groupId>
    <artifactId>win10app</artifactId>
    <version>2016.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <appxPath>${project.build.directory}/win10.zip</appxPath>
    </properties>

    <build>
        <plugins>
            <!-- Zip-up all *.pom files & upload to repository -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <finalName>win10</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                    <descriptors>
                        <descriptor>assembly.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly-win10</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

